groups:
  - name: grovepi_dht_sensor
    rules:
    - alert: grovepi_temp_over_25
      expr: grovepi_dht_temperature > 25
      for: 5m
      labels:
        severity: warning
      annotations:
        summary: "Temp is over 25 C"
        description: "Open window"
    
    - alert: grovepi_temp_over_30
      expr: grovepi_dht_temperature > 30
      for: 5m
      labels:
        severity: firing
      annotations:
        summary: "Temp is over 30 C"
        description: "Open window"
